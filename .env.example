PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_notification_db
DB_USER=your_name
DB_PASSWORD=your_password

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=10000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_NAME=email_notification_session

JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3

# Email/SMTP Configuration (Choose one)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-specific-password

# Email Sender Configuration
EMAIL_FROM_NAME=Email Notification System
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# Email Retry Configuration
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=300000
EMAIL_MAX_RETRIES=3

# Bull Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_DELAY=5000
EMAIL_CHECK_INTERVAL=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m
LOG_DATE_PATTERN=YYYY-MM-DD

# Cron Configuration
CRON_SCHEDULE=* * * * *
CRON_BATCH_SIZE=50
CRON_ENABLED=true

# Application URLs
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5001
API_BASE_URL=http://localhost:5000/api/v1

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Request Body Limits
REQUEST_SIZE_LIMIT=10mb
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# Verification & Password Reset
EMAIL_VERIFICATION_EXPIRY=24h
PASSWORD_RESET_EXPIRY=1h
VERIFICATION_TOKEN_LENGTH=32

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# Request Timeout
REQUEST_TIMEOUT=30000

# Keep Alive
KEEP_ALIVE_TIMEOUT=65000

ENABLE_API_DOCS=true
ENABLE_RATE_LIMITING=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_MORGAN_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m

# to run the sql file use the command
# psql -U yourname -d email_notification_db -f email_notification_system.sql
